SHELL = /bin/bash
PROG = isco

PREFIX = @prefix@
LIBDIR = $(PREFIX)/lib/$(PROG)

SUBDIRS = src util/schema-parser util/scripts

all:
	for DIR in $(SUBDIRS); do $(MAKE) -C $$DIR $@; done

install:
	for DIR in $$SUBDIRS; do $(MAKE) -C $$DIR $@; done

clean:
	rm -f *~ \#* *.o $(COMPILER) $(PROGSHELL)
	for DIR in $(SUBDIRS); do $(MAKE) -C $$DIR $@; done

distclean: clean
	find -name \*.in | sed -e 's/\.in$$//'

.PHONY: all install clean distclean

