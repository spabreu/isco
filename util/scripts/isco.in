# -- isco.sh ------------------------------------------------------------------
#
# isco [FLAGS] FILES
#
# FILES is a list of files or directories:
#   DIRECTORY -> compile (with ISCO) and load
#   FILE.isco -> compile (with ISCO) and load
#   FILE.*    -> load
# FLAGS may be:
#   --output=FILE   Place executable into FILE
#   -o FILE         Same as --output=FILE
#   --compile, -c   Compile all files

# -- setup --------------------------------------------------------------------

PREFIX=@prefix@
LIBDIR=@prefix@/lib/isco
PLXDIR=@prefix@/lib/gprolog-cx/ext

GPLC=gplc-cx
ISCOC=iscoc

PROG=${0##*/}

PREFIX="\
	$LIBDIR/revision.o \
	$LIBDIR/apt.o \
	$LIBDIR/top-level.o \
	$LIBDIR/ctype.o \
	$LIBDIR/empty-classes.o \
	$LIBDIR/copyright.o \
	$LIBDIR/isco_lib_dir.o"

DB="\
	$PLX/postgresql/interface.pl \
	$PLX/postgresql/module.o \
	$PLX/odbc/interface.pl \
	$PLX/odbc/module.o"

LIBDB="-L -lodbc -L -lpq"

SUFFIX="$DB $LIBDB"

# -- execution parameters -----------------------------------------------------

OUTPUT=""

FILES=""
SEP=""

IFILES=""
ISEP=""

PIFILES=""
PISEP=""

# -- go! ----------------------------------------------------------------------

COMPILE=
KEEP=
while [ ! -z "$1" ]; do
  case $1 in

  --help|-h)
    cat <<EOF
usage: $PROG ... [to be written]
EOF
    exit 1;;

  --output=*)
    OUTPUT=${1#--output=};
    shift;;

  -o)
    OUTPUT=$2;
    shift;
    shift;;

  -c|--compile)
    COMPILE=yes;
    KEEP=yes;
    shift;;

  -k|--keep)
    KEEP=yes;
    shift;;

  -*)
    echo 1>&2 illegal flag: $1. try $PROG --help for information.;
    exit 1;;

  *.isco)
    IFILE=$1;
    IFILES="$IFILES$ISEP$IFILE";
    ISEP=" ";
    shift;;

  *.pl|*.c)
    FILE=$1;
    FILES="$FILES$SEP$FILE";
    SEP=" ";
    shift;;

  *)
    echo 1>&2 illegal argument: $1. try $PROG --help for information.;
    exit 1;;
  esac
done

if [ -z "$FILES" -a -z "$IFILES" ]; then
  echo 1>&2 "no files specified. try $PROG --help for information."
  exit 1
fi

if [ -z "$OUTPUT" -a -z "$COMPILE" ]; then
  echo 1>&2 "no output and not compiling.  try $PROG --help for information."
  exit 1
fi

LC_ALL=en_US
export LC_ALL

for IFILE in $IFILES; do
  [ -n "$COMPILE" ] && PIFILE=${IFILE%.isco}.pl
  [ -z "$COMPILE" ] && PIFILE=$(tempfile -p isco -s .pl)
  $ISCOC -c $IFILE > $PIFILE
  FILES="$FILES$SEP$IFILE"
  SEP=" "
  PIFILES="$PIFILES$PISEP$PIFILE"
  PISEP=" "
done

[ -z "$OUTPUT" ] && exit 0

echo $GPLC -o $OUTPUT $PREFIX $FILES $SUFFIX

[ -z "$KEEP" ] && echo rm -f $PIFILES

